---
import { getCollection, getEntry, render, type CollectionEntry } from "astro:content";
import BaseLayout from "../../layouts/BaseLayout.astro";
import { formatFullDate } from "../../lib/dates";

const giscusTheme = import.meta.env.DEV
  ? "http://localhost:4321/giscus-theme.css?v=1"
  : new URL("/giscus-theme.css?v=1", Astro.site ?? "https://yacksons.world").toString();

const slugParam = Array.isArray(Astro.params.slug)
  ? Astro.params.slug.join("/")
  : Astro.params.slug ?? "";
const post = await getEntry("blog", slugParam);
if (!post) {
  throw new Response("Not found", { status: 404 });
}

const now = new Date();
const showFuturePosts =
  import.meta.env.DEV || import.meta.env.SHOW_FUTURE_POSTS === "true";
if (!showFuturePosts && post.data.pubDate.valueOf() > now.valueOf()) {
  throw new Response("Not found", { status: 404 });
}
const { Content } = await render(post);
---

<BaseLayout title={post.data.title}>
  <a href="/blog/">Back</a>
  <h1>{post.data.title}</h1>
  <p class="post-date">
    {formatFullDate(post.data.pubDate)}
    {showFuturePosts && post.data.pubDate.valueOf() > now.valueOf() && (
      <span class="scheduled-badge">Scheduled</span>
    )}
  </p>
  <div
    class:list={[
      "post-content",
      post.data.imageAlign === "left" && "images-left",
      post.data.imageAlign === "right" && "images-right",
    ]}
  >
    <Content />
  </div>
  <section class="comments" aria-label="Comments">
    <script
      src="https://giscus.app/client.js"
      data-repo="yackson-EX/yacksons-world"
      data-repo-id="R_kgDORAkMlg"
      data-category="Comments"
      data-category-id="DIC_kwDORAkMls4C1hiM"
      data-mapping="pathname"
      data-strict="0"
      data-reactions-enabled="0"
      data-emit-metadata="0"
      data-input-position="top"
      data-theme={giscusTheme}
      data-lang="en"
      crossorigin="anonymous"
      async
    ></script>
  </section>

  <style>
    .post-content :global(img) {
      display: block;
      margin: 0 auto;
      max-width: 200px;
      max-height: 200px;
      width: auto;
      height: auto;
    }

    .post-content.images-left :global(img) {
      margin-left: 0;
      margin-right: auto;
    }

    .post-content.images-right :global(img) {
      margin-left: auto;
      margin-right: 0;
    }

    :global(.post-figure) {
      display: table;
      margin: 0 auto 14px;
      text-align: center;
    }

    :global(.post-content.images-left .post-figure) {
      margin-left: 0;
      margin-right: auto;
      text-align: left;
    }

    :global(.post-content.images-right .post-figure) {
      margin-left: auto;
      margin-right: 0;
      text-align: right;
    }

    :global(.post-content.images-left .post-figure img) {
      margin-left: 0;
      margin-right: auto;
    }

    :global(.post-content.images-right .post-figure img) {
      margin-left: auto;
      margin-right: 0;
    }

    :global(.post-figcaption) {
      margin-top: 6px;
      font-size: 0.95em;
      opacity: 0.85;
    }

    /* Reserve space for Giscus to reduce layout shift */
    .comments {
      min-height: 320px;
    }

  </style>

  <script>
    document.addEventListener("DOMContentLoaded", () => {
      const figuresFromImages = (root) => {
        const imgs = Array.from(root.querySelectorAll("img"));
        imgs.forEach((img) => {
          if (img.dataset.captionized) return;
          const caption = img.getAttribute("alt");
          const width = Number(img.getAttribute("width"));
          const height = Number(img.getAttribute("height"));
          if (width > 0 && height > 0) {
            img.style.aspectRatio = `${width} / ${height}`;
          } else {
            img.style.aspectRatio = "4 / 3";
          }
          if (!caption) return;

          const figure = document.createElement("figure");
          figure.className = "post-figure";
          const figcaption = document.createElement("figcaption");
          figcaption.className = "post-figcaption";
          figcaption.textContent = caption;

          const parent = img.parentNode;
          if (!parent) return;

          // If the image sits inside a paragraph, place the figure after the paragraph
          // to avoid invalid nesting and weird alignment.
          if (parent.tagName === "P") {
            parent.insertAdjacentElement("afterend", figure);
            figure.appendChild(img);
            figure.appendChild(figcaption);
            if (!parent.textContent.trim()) {
              parent.remove();
            }
          } else {
            parent.insertBefore(figure, img);
            figure.appendChild(img);
            figure.appendChild(figcaption);
          }

          img.dataset.captionized = "true";
        });
      };

      const container = document.querySelector(".post-content");
      if (container) {
        figuresFromImages(container);
      }
    });
  </script>
</BaseLayout>
